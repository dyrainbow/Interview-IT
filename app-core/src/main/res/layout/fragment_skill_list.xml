<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/skill_list_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/title_bar">

        <ImageView android:id="@+id/skill_list_back_imgbtn"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="20dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/title_bar_back"/>

        <TextView android:id="@+id/skill_list_title_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textColor="@android:color/white"
                  android:textSize="20sp"/>

    </RelativeLayout>

    <ListView   android:id="@+id/skill_list_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/skill_list_title_bar">
    </ListView>
</RelativeLayout>