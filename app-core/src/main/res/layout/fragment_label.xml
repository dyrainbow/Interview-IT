<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/menu_label_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/title_bar"
                    android:gravity="center">

        <ImageView android:id="@+id/menu_label_back_imgbtn"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_marginLeft="20dp"
                     android:src="@drawable/title_bar_back"
                     android:layout_alignParentLeft="true"/>

        <ImageView android:id="@+id/menu_label_save_imgbtn"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_marginRight="20dp"
                     android:src="@drawable/title_bar_save"
                     android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <GridView android:id="@+id/menu_label_gridview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:numColumns="auto_fit"
              android:verticalSpacing="10dp"
              android:horizontalSpacing="10dp"
              android:columnWidth="90dp"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_below="@+id/menu_label_title_bar">
    </GridView>

</RelativeLayout>